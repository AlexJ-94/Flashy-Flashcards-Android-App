<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="6.75"
        android:id="@+id/linearLayout">
    <TextView
        android:id="@+id/list_item_folder_name_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Folder Name"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:background="@color/backgroundListItem"
        android:textColor="@color/text"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/edit_folder_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/backgroundListItem"
        android:textColor="@color/text"
        android:padding="4dp"
        android:text="Edit"/>
    <ImageView
        android:id="@+id/delete_folder_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        android:background="@color/backgroundListItem"
        android:src="@drawable/ic_delete_folder" />
        </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/linearLayout" />

</RelativeLayout>